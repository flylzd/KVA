<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_layout_height"
        android:background="@color/bg_actionbar">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_left_fav"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="关注"
                android:textColor="@drawable/selector_color_fav" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_right_fav"
                android:button="@null"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@drawable/selector_color_fav" />

        </RadioGroup>
    </RelativeLayout>

</LinearLayout>